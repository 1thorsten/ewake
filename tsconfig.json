{
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "src-js",
    "incremental": true,
    "target": "es2019",
    "sourceMap": true,
    "skipLibCheck": false,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "lib": [
      "es2018","dom"
    ],
    "types": [
      "node"
    ]
  },
  "exclude": [
    "node_modules",
    "webpack",
    "utils"
  ]
}
